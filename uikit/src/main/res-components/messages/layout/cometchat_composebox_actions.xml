<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/message_actions"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/group_call_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/start_group_call"
        android:drawableTint="@color/greyUikit"
        android:drawableStart="@drawable/ic_video_call_black_24dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/vw_polls_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/create_a_poll"
        android:drawableTint="@color/greyUikit"
        android:drawableStart="@drawable/ic_poll_24dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gallery_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/photo_library"
        android:drawableStart="@drawable/ic_photo"
        android:drawableTint="@color/greyUikit"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/video_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/video_library"
        android:drawableStart="@drawable/ic_videocam_24dp"
        android:drawableTint="@color/greyUikit"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/camera_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/take_a_photo"
        android:drawableTint="@color/greyUikit"
        android:drawableStart="@drawable/ic_camera"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/file_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_files"
        android:drawableStart="@drawable/ic_insert_drive_file_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/greyUikit"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/audio_message"
        android:clickable="true"
        android:drawableStart="@drawable/ic_library_music_24dp"
        android:drawableTint="@color/greyUikit"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/greyUikit"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/send_audio_files"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/location_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_near_me_24dp"
        android:drawableTint="@color/greyUikit"
        android:textStyle="bold"
        android:textColor="@color/greyUikit"
        android:text="@string/share_location"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sticker_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/default_sticker"
        android:drawableTint="@color/greyUikit"
        android:textStyle="bold"
        android:textColor="@color/greyUikit"
        android:text="@string/send_sticker"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/vw_whiteboard_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_whiteboard_24dp"
        android:drawableTint="@color/greyUikit"
        android:textStyle="bold"
        android:textColor="@color/greyUikit"
        android:text="@string/share_whiteboard"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/writeboard_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_writeboard_24dp"
        android:drawableTint="@color/greyUikit"
        android:textStyle="bold"
        android:textColor="@color/greyUikit"
        android:text="@string/share_writeboard"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

